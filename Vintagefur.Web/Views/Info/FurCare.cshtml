@{
    ViewBag.Title = "Уход за мехом";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Основные стили для страницы ухода за мехом */
    .fur-care-page {
        padding: 2rem 0;
        background-color: #f8f5f1;
        font-family: 'Times New Roman', Times, serif;
        color: #333;
    }

    .fur-care-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .fur-care-title {
        font-size: 3rem;
        color: #8B4513;
        margin-bottom: 1rem;
        font-family: 'Playfair Display', serif;
    }

    .fur-care-subtitle {
        font-size: 1.2rem;
        color: #666;
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Стили для блоков с информацией */
    .fur-care-section {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        padding: 3rem;
        margin-bottom: 3rem;
    }

    .fur-care-section-title {
        font-size: 2rem;
        color: #8B4513;
        margin-bottom: 2rem;
        font-family: 'Playfair Display', serif;
        position: relative;
        padding-bottom: 1rem;
    }

    .fur-care-section-title:after {
        content: '';
        width: 50px;
        height: 2px;
        background: #8B4513;
        position: absolute;
        bottom: 0;
        left: 0;
    }

    .fur-care-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    .fur-care-image-container {
        position: relative;
        height: 100%;
        min-height: 300px;
    }

    .fur-care-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .fur-care-text {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .fur-care-text p {
        margin-bottom: 1.5rem;
    }

    .fur-care-text ul {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .fur-care-text li {
        margin-bottom: 0.8rem;
    }

    /* Стили для таблицы рекомендаций по хранению */
    .fur-care-table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
    }

    .fur-care-table th {
        background-color: #8B4513;
        color: white;
        text-align: left;
        padding: 15px;
    }

    .fur-care-table td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    .fur-care-table tr:nth-child(even) {
        background-color: #f9f3ea;
    }

    /* Стили для блоков с советами */
    .fur-care-tips {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-top: 3rem;
    }

    .fur-care-tip {
        padding: 2rem;
        background-color: #f9f3ea;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .fur-care-tip:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .fur-care-tip-icon {
        width: 80px;
        height: 80px;
        background-color: #8B4513;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2rem;
    }

    .fur-care-tip-title {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 1rem;
        font-weight: bold;
    }

    .fur-care-tip-text {
        font-size: 1rem;
        color: #666;
        line-height: 1.6;
    }

    /* Стили для FAQ секции */
    .fur-care-faq {
        margin-top: 3rem;
    }

    .fur-care-question {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #ddd;
        padding-bottom: 1.5rem;
    }

    .fur-care-question-title {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 1rem;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .fur-care-question-title:after {
        content: '+';
        font-size: 1.5rem;
        color: #8B4513;
    }

    .fur-care-question-content {
        font-size: 1.1rem;
        color: #666;
        line-height: 1.6;
        display: none;
    }

    .fur-care-question.active .fur-care-question-title:after {
        content: '-';
    }

    .fur-care-question.active .fur-care-question-content {
        display: block;
    }

    /* Стили для контактной формы */
    .fur-care-contact {
        margin-top: 3rem;
        padding: 3rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .fur-care-contact-title {
        font-size: 2rem;
        color: #8B4513;
        margin-bottom: 2rem;
        font-family: 'Playfair Display', serif;
    }

    .fur-care-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .fur-care-form-full {
        grid-column: 1 / -1;
    }

    .fur-care-form-label {
        display: block;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .fur-care-form-input,
    .fur-care-form-textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1rem;
        font-family: inherit;
    }

    .fur-care-form-textarea {
        resize: vertical;
        min-height: 150px;
    }

    .fur-care-form-button {
        background-color: #8B4513;
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .fur-care-form-button:hover {
        background-color: #6b3510;
    }

    /* Адаптивные стили */
    @media (max-width: 992px) {
        .fur-care-grid {
            grid-template-columns: 1fr;
        }

        .fur-care-tips {
            grid-template-columns: 1fr 1fr;
        }

        .fur-care-form {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .fur-care-title {
            font-size: 2.5rem;
        }

        .fur-care-section {
            padding: 2rem;
        }

        .fur-care-tips {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="fur-care-page">
    <div class="container">
        <div class="fur-care-header">
            <h1 class="fur-care-title">Правильный уход за меховыми изделиями</h1>
            <p class="fur-care-subtitle">Качественный уход за меховыми изделиями поможет сохранить их красоту и продлить срок службы на долгие годы. На этой странице мы собрали рекомендации экспертов по хранению, чистке и бережному использованию меховых изделий.</p>
        </div>

        <div class="fur-care-section">
            <h2 class="fur-care-section-title">Правила хранения меха</h2>
            <div class="fur-care-grid">
                <div class="fur-care-image-container">
                    <img src="/images/products/fur-storage.jpg" alt="Хранение меховых изделий" class="fur-care-image">
                </div>
                <div class="fur-care-text">
                    <p>Правильное хранение меховых изделий в период межсезонья - ключевой фактор для сохранения их первоначального вида и качества. Следуйте нашим рекомендациям, чтобы ваш мех радовал вас многие годы:</p>
                    <ul>
                        <li><strong>Температурный режим:</strong> Меховые изделия следует хранить при температуре 0-7°C и влажности 45-55%. Идеальное решение - профессиональное хранение в специализированном меховом холодильнике.</li>
                        <li><strong>Защита от света:</strong> Избегайте воздействия прямых солнечных лучей и яркого освещения, которые могут привести к выгоранию и изменению цвета меха.</li>
                        <li><strong>Проветривание:</strong> Перед помещением на хранение дайте изделию хорошо проветриться в течение нескольких часов.</li>
                        <li><strong>Использование чехлов:</strong> Храните меховые изделия в специальных чехлах из натуральных дышащих тканей, которые обеспечивают циркуляцию воздуха.</li>
                        <li><strong>Защита от моли:</strong> Используйте натуральные средства защиты от моли, такие как кедровые блоки или лаванда, избегая химических репеллентов, которые могут повредить мех.</li>
                    </ul>
                </div>
            </div>

            <table class="fur-care-table">
                <thead>
                    <tr>
                        <th>Тип меха</th>
                        <th>Особенности хранения</th>
                        <th>Рекомендации по периодичности ухода</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Соболь, норка</td>
                        <td>Требуют прохладного хранения, особенно чувствительны к высоким температурам</td>
                        <td>Профессиональная чистка раз в 2-3 года, ежегодное расчесывание</td>
                    </tr>
                    <tr>
                        <td>Лиса, песец</td>
                        <td>Необходимо особое внимание к защите от сминания ворса</td>
                        <td>Расчесывание 2 раза в год, профессиональная чистка каждые 3-4 года</td>
                    </tr>
                    <tr>
                        <td>Каракуль, бобр</td>
                        <td>Важно контролировать влажность, чтобы избежать пересушивания</td>
                        <td>Профессиональная чистка каждые 4-5 лет, регулярное проветривание</td>
                    </tr>
                    <tr>
                        <td>Шиншилла</td>
                        <td>Исключительно деликатное хранение, без компрессии и трения</td>
                        <td>Только профессиональный уход, минимальное воздействие</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="fur-care-section">
            <h2 class="fur-care-section-title">Чистка и уход</h2>
            <div class="fur-care-grid">
                <div class="fur-care-text">
                    <p>Правильный уход за мехом заключается в сочетании регулярного домашнего ухода и периодической профессиональной чистки. Важно помнить, что неправильные методы чистки могут серьезно повредить меховое изделие.</p>
                    <ul>
                        <li><strong>Регулярное расчесывание:</strong> Используйте специальную щетку с редкими зубьями, расчесывая мех по направлению роста ворса. Это помогает удалить пыль и сохранить естественный блеск меха.</li>
                        <li><strong>Удаление загрязнений:</strong> Небольшие загрязнения можно удалить мягкой щеткой или деликатной тканью. Никогда не используйте воду или бытовые чистящие средства для чистки меха.</li>
                        <li><strong>Сушка:</strong> Если меховое изделие намокло, аккуратно стряхните капли и дайте высохнуть естественным путем вдали от источников тепла. После высыхания осторожно встряхните и расчешите мех.</li>
                        <li><strong>Профессиональная чистка:</strong> Доверяйте чистку меховых изделий только специалистам, которые используют профессиональные методы и средства, щадящие для меха.</li>
                    </ul>
                </div>
                <div class="fur-care-image-container">
                    <img src="/images/products/fur-cleaning.jpg" alt="Чистка меховых изделий" class="fur-care-image">
                </div>
            </div>

            <div class="fur-care-tips">
                <div class="fur-care-tip">
                    <div class="fur-care-tip-icon">1</div>
                    <h3 class="fur-care-tip-title">Избегайте парфюмерии</h3>
                    <p class="fur-care-tip-text">Не наносите духи и другие косметические средства непосредственно на мех. Спирт и химические компоненты могут повредить структуру ворса и вызвать изменение цвета.</p>
                </div>
                <div class="fur-care-tip">
                    <div class="fur-care-tip-icon">2</div>
                    <h3 class="fur-care-tip-title">Защита от влаги</h3>
                    <p class="fur-care-tip-text">В дождливую погоду используйте зонт, чтобы защитить меховое изделие от намокания. Избегайте непосредственного контакта с мокрым снегом.</p>
                </div>
                <div class="fur-care-tip">
                    <div class="fur-care-tip-icon">3</div>
                    <h3 class="fur-care-tip-title">Проветривание</h3>
                    <p class="fur-care-tip-text">После каждого ношения позвольте меховому изделию проветриться в течение нескольких часов перед помещением в шкаф или на вешалку.</p>
                </div>
            </div>
        </div>

        <div class="fur-care-section">
            <h2 class="fur-care-section-title">Часто задаваемые вопросы</h2>
            <div class="fur-care-faq">
                <div class="fur-care-question active">
                    <h3 class="fur-care-question-title">Можно ли стирать или мыть меховые изделия?</h3>
                    <div class="fur-care-question-content">
                        <p>Категорически не рекомендуется стирать или мыть меховые изделия самостоятельно. Вода может серьезно повредить структуру меха, привести к деформации кожевой основы и повреждению ворса. Для очистки используйте только сухие методы или обратитесь к профессионалам, которые владеют специальными техниками сухой чистки.</p>
                    </div>
                </div>
                <div class="fur-care-question">
                    <h3 class="fur-care-question-title">Как часто необходимо проводить профессиональную чистку меха?</h3>
                    <div class="fur-care-question-content">
                        <p>Периодичность профессиональной чистки зависит от типа меха и интенсивности использования изделия. В среднем рекомендуется проводить такую чистку каждые 2-3 года для изделий, которые носятся регулярно. Для редко используемых предметов гардероба достаточно чистки каждые 4-5 лет. Однако если на меховом изделии появились загрязнения или изменился внешний вид ворса, стоит обратиться к специалистам независимо от срока последней чистки.</p>
                    </div>
                </div>
                <div class="fur-care-question">
                    <h3 class="fur-care-question-title">Как правильно повесить меховое изделие на вешалку?</h3>
                    <div class="fur-care-question-content">
                        <p>Для хранения меховых изделий используйте широкие плечики или специальные вешалки для меха, которые равномерно распределяют вес изделия. Это предотвратит деформацию плечевой зоны. Важно, чтобы изделие свободно висело в шкафу, не соприкасаясь с другими предметами одежды. Расстояние между вешалками должно быть не менее 5-7 см для обеспечения циркуляции воздуха.</p>
                    </div>
                </div>
                <div class="fur-care-question">
                    <h3 class="fur-care-question-title">Что делать, если мех стал тусклым и потерял блеск?</h3>
                    <div class="fur-care-question-content">
                        <p>Потеря блеска - частая проблема для меховых изделий, которая может быть вызвана излишней сухостью, пылью или неправильным хранением. Первый шаг - аккуратное расчесывание специальной щеткой для меха. Если это не помогает, можно обратиться к профессионалам для проведения процедуры глазирования, которая восстанавливает естественный блеск меха. Также стоит пересмотреть условия хранения изделия, обеспечив оптимальную влажность воздуха.</p>
                    </div>
                </div>
                <div class="fur-care-question">
                    <h3 class="fur-care-question-title">Можно ли самостоятельно удалить запах с мехового изделия?</h3>
                    <div class="fur-care-question-content">
                        <p>Для удаления легкого запаха можно проветрить изделие на свежем воздухе (но не под прямыми солнечными лучами) в течение нескольких часов. Для более стойких запахов можно использовать метод "проветривания" при помощи активированного угля или кофе в зернах - поместите их в открытой емкости рядом с меховым изделием в закрытом пространстве на несколько дней. Никогда не используйте духи или дезодоранты для перебивания запаха меха. Если запах сильный или неприятный, лучше обратиться к профессионалам.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="fur-care-contact">
            <h2 class="fur-care-contact-title">Получить консультацию специалиста</h2>
            <form class="fur-care-form">
                <div>
                    <label for="name" class="fur-care-form-label">Имя</label>
                    <input type="text" id="name" class="fur-care-form-input" required>
                </div>
                <div>
                    <label for="email" class="fur-care-form-label">Email</label>
                    <input type="email" id="email" class="fur-care-form-input" required>
                </div>
                <div>
                    <label for="phone" class="fur-care-form-label">Телефон</label>
                    <input type="tel" id="phone" class="fur-care-form-input">
                </div>
                <div>
                    <label for="fur-type" class="fur-care-form-label">Тип меха</label>
                    <select id="fur-type" class="fur-care-form-input">
                        <option value="">Выберите тип меха</option>
                        <option value="sable">Соболь</option>
                        <option value="mink">Норка</option>
                        <option value="fox">Лиса</option>
                        <option value="chinchilla">Шиншилла</option>
                        <option value="other">Другой</option>
                    </select>
                </div>
                <div class="fur-care-form-full">
                    <label for="message" class="fur-care-form-label">Ваш вопрос</label>
                    <textarea id="message" class="fur-care-form-textarea" required></textarea>
                </div>
                <div class="fur-care-form-full">
                    <button type="submit" class="fur-care-form-button">Отправить запрос</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Простой JavaScript для работы с FAQ
    document.addEventListener('DOMContentLoaded', function() {
        var questions = document.querySelectorAll('.fur-care-question-title');
        
        questions.forEach(function(question) {
            question.addEventListener('click', function() {
                var parent = this.parentNode;
                if (parent.classList.contains('active')) {
                    parent.classList.remove('active');
                } else {
                    document.querySelectorAll('.fur-care-question').forEach(function(q) {
                        q.classList.remove('active');
                    });
                    parent.classList.add('active');
                }
            });
        });
    });
</script> 