@model Vintagefur.Domain.Models.Product
@{
    ViewBag.Title = Model.Name;
}

<style>
    /* ----- Variables ----- */
    :root {
        --color-primary: #4c4c4c;
        --color-secondary: #a6a6a6;
        --color-highlight: #8B4513;
        --color-background: #f7f2e9;
    }

    /* ----- Global ----- */
    * {
        box-sizing: border-box;
    }

    body {
        font-family: "Raleway", sans-serif;
    }

    h3 {
        font-size: 0.9em;
        letter-spacing: 1.2px;
        color: var(--color-secondary);
        text-transform: uppercase;
    }

    .product-details-container {
        padding: 50px 0;
        background-color: var(--color-background);
    }

    /* ----- Product Section ----- */
    .product {
        display: grid;
        grid-template-columns: 0.9fr 1fr;
        margin: auto;
        padding: 2.5em;
        max-width: 1100px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* ----- Photo Section ----- */
    .product__photo {
        position: relative;
    }

    .photo-container {
        position: relative;
        left: -2.5em;
        display: grid;
        grid-template-rows: 1fr;
        width: 100%;
        height: 100%;
        border-radius: 6px;
        box-shadow: 4px 4px 25px -2px rgba(0, 0, 0, 0.3);
    }

    .photo-main {
        border-radius: 6px 6px 0 0;
        background: linear-gradient(#e6d2b5, #d4b996);
        position: relative;
        min-height: 400px;
    }

    .controls {
        display: flex;
        justify-content: space-between;
        padding: 0.8em;
        color: #fff;
    }

    .controls i {
        cursor: pointer;
        font-size: 1.2em;
    }

    .photo-main img {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
        height: auto;
        max-height: 350px;
        object-fit: contain;
        filter: drop-shadow(2px 10px 10px rgba(0, 0, 0, 0.2));
    }

    .photo-album {
        padding: 0.7em 1em;
        border-radius: 0 0 6px 6px;
        background-color: #fff;
    }

    .photo-album ul {
        display: flex;
        justify-content: space-around;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .photo-album li {
        float: left;
        width: 55px;
        height: 55px;
        padding: 7px;
        border: 1px solid var(--color-secondary);
        border-radius: 3px;
        margin: 0 5px;
        cursor: pointer;
        transition: border-color 0.3s ease;
    }

    .photo-album li:hover {
        border-color: var(--color-highlight);
    }

    .photo-album img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* ----- Informations Section ----- */
    .product__info {
        padding: 0.8em 0;
    }

    .title h1 {
        margin-bottom: 0.1em;
        color: var(--color-primary);
        font-size: 1.5em;
        font-weight: 900;
    }

    .title span {
        font-size: 0.7em;
        color: var(--color-secondary);
    }

    .price {
        margin: 1.5em 0;
        color: var(--color-highlight);
        font-size: 1.2em;
    }

    .price span {
        padding-left: 0.15em;
        font-size: 2.9em;
    }

    .variant {
        overflow: auto;
        margin-bottom: 2em;
    }

    .variant h3 {
        margin-bottom: 1.1em;
    }

    .variant ul {
        display: flex;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .variant li {
        padding: 5px 10px;
        border: 1px solid var(--color-secondary);
        border-radius: 3px;
        cursor: pointer;
        margin-right: 10px;
        font-size: 0.8em;
    }

    .variant li:first-child,
    .variant li:hover {
        border: 1px solid var(--color-highlight);
        background-color: rgba(139, 69, 19, 0.1);
    }

    .description {
        clear: left;
        margin: 2em 0;
    }

    .description h3 {
        margin-bottom: 1em;
    }

    .description p {
        color: var(--color-primary);
        font-size: 0.95em;
        line-height: 1.6;
    }

    .description ul {
        font-size: 0.9em;
        list-style: disc;
        margin-left: 1em;
        color: var(--color-primary);
    }

    .description li {
        margin-bottom: 0.5em;
    }

    .buy--btn {
        padding: 1.5em 3.1em;
        border: none;
        border-radius: 7px;
        font-size: 0.8em;
        font-weight: 700;
        letter-spacing: 1.3px;
        color: #fff;
        background-color: var(--color-highlight);
        box-shadow: 2px 2px 25px -7px var(--color-primary);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .buy--btn:hover {
        background-color: #6b3510;
    }

    .buy--btn:active {
        transform: scale(0.97);
    }

    /* Responsiveness */
    @@media (max-width: 768px) {
        .product {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto;
            padding: 1.5em;
        }

        .photo-container {
            left: 0;
            margin-bottom: 2em;
        }

        .photo-main img {
            position: relative;
            left: 0;
            top: 0;
            transform: none;
            width: 100%;
            height: auto;
            padding: 1em;
        }
    }
</style>

<div class="product-details-container">
    <div class="container">
        <section class="product">
            <div class="product__photo">
                <div class="photo-container">
                    <div class="photo-main">
                        <div class="controls">
                            <i class="fa fa-share"></i>
                            <i class="fa fa-heart-o"></i>
                        </div>
                        <img src="@Model.ImageUrl" alt="@Model.Name">
                    </div>
                    <div class="photo-album">
                        <ul>
                            <li><img src="@Model.ImageUrl" alt="@Model.Name"></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="product__info">
                <div class="title">
                    <h1>@Model.Name</h1>
                    <span>SKU: @Model.Id.ToString("D5")</span>
                </div>
                <div class="price">
                    $ <span>@Model.Price.ToString("N0")</span>
                </div>
                @if (Model.Material != null || Model.Style != null)
                {
                    <div class="variant">
                        <h3>DETAILS</h3>
                        <ul>
                            @if (Model.Material != null)
                            {
                                <li>@Model.Material.Name</li>
                            }
                            @if (Model.Style != null)
                            {
                                <li>@Model.Style.Name</li>
                            }
                        </ul>
                    </div>
                }
                <div class="description">
                    <h3>DESCRIPTION</h3>
                    <p>@Model.Description</p>
                </div>
                <div class="description">
                    <h3>SPECIFICATIONS</h3>
                    <ul>
                        @if (Model.Category != null)
                        {
                            <li>Category: @Model.Category.Name</li>
                        }
                        @if (Model.Material != null)
                        {
                            <li>Material: @Model.Material.Name</li>
                        }
                        @if (Model.Style != null)
                        {
                            <li>Style: @Model.Style.Name</li>
                        }
                        <li>Available: @(Model.IsAvailable ? "Yes" : "No")</li>
                    </ul>
                </div>
                @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="quantity-selector" style="margin-bottom: 20px;">
                        <h3>QUANTITY</h3>
                        <div style="display: flex; align-items: center;">
                            <button type="button" class="quantity-btn" onclick="decrementQuantity()" style="width: 30px; height: 30px;">-</button>
                            <input type="number" name="quantity" id="quantity" value="1" min="1" max="10" style="width: 50px; text-align: center; margin: 0 10px;" />
                            <button type="button" class="quantity-btn" onclick="incrementQuantity()" style="width: 30px; height: 30px;">+</button>
                        </div>
                    </div>
                    <button type="submit" class="buy--btn">ADD TO CART</button>
                }
            </div>
        </section>
    </div>
</div>

<script>
    function decrementQuantity() {
        var input = document.getElementById('quantity');
        var value = parseInt(input.value);
        if (value > 1) {
            input.value = value - 1;
        }
    }

    function incrementQuantity() {
        var input = document.getElementById('quantity');
        var value = parseInt(input.value);
        if (value < 10) {
            input.value = value + 1;
        }
    }
</script> 